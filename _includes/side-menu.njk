{% macro menuItem(targetPage) %}
  <a class="menu-item {{ 'current-page' if page.url == targetPage.url else '' }}" href="{{ targetPage.url }}">
    {{ targetPage.data.title }}
  </a>
{% endmacro %}


<aside class="side-menu">
  <h2>Navigation</h2>
  <nav class="menu-root">
    {% for home in collections.home %}
      {{ menuItem(home) }}
    {% endfor %}
    <h7 class="menu-item">Basic Information</h7>
    <nav class="basicinfo">
      {% for info in collections.basicinfo %}
        {{ menuItem(info) }}
      {% endfor %}
    </nav>
    <h7 class="menu-item"><a href="/userstories">User Stories</a></h7>
    <nav class="userstories">
      {% for story in collections.userstories%}
        {{ menuItem(story) }}
      {% endfor %}
    </nav>
    <h7 class="menu-item">Use Cases</h7>
    <nav class="usecases">
      {% for case in collections.usecases %}
        {{ menuItem(case) }}
      {% endfor %}
    </nav>
    <h7 class="menu-item">Emulation Technologies</h7>
    <nav class="emutech">
      {% for technology in collections.emutech%}
        {{ menuItem(technology) }}
      {% endfor %}
    </nav>
    <h7 class="menu-item">References</h7>
    <nav class="references">
      {% for references in collections.references %}
        {{ menuItem(references) }}
      {% endfor %}
    </nav>
  </nav>
</aside>
